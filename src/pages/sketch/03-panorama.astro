---
import AframeLayout from "@/layouts/AframeLayout.astro";
---

<AframeLayout title="A-Frame | 03 Panorama">
    <a-scene>
        <a-asset>
            <img id="panorama" src="/a-frame/ref/PXL_20240919_151438083.PANO.jpg" >
        </a-asset>

        <a-entity position="0 2 0">
            <a-curvedimage 
                src="#panorama"
                height="4.0"
                radius="3.64637"
                theta-length="360"
            ></a-curvedimage>
        </a-entity>

        <a-entity camera look-controls position="0 2 0"></a-entity>

        <a-sky color="#000"></a-sky>
    </a-scene>
</AframeLayout>